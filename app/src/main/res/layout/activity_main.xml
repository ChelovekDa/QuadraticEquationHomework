<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/X2"
        android:layout_width="120dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="264dp"
        android:background="#D6EFDF"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Ответ"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColorHint="#DA579C3E"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/X1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="54dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="265dp"
        android:text="X2 ="
        android:textAlignment="center"
        android:textColor="#579C3E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/X1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="335dp"
        android:layout_height="81dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="38dp"
        android:text="ПРИЛОЖЕНИЕ\nКВАДРАТНОЕ УРАВНЕНИЕ"
        android:textAlignment="center"
        android:textColor="#579C3E"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="362dp"
        android:layout_height="62dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:text="Необходимо решить следующее квадратное уравнение"
        android:textAlignment="viewStart"
        android:textColor="#579C3E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/equation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/equation"
        android:layout_width="365dp"
        android:layout_height="59dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="22dp"
        android:background="#D6EFDF"
        android:hint="Квадратное уравнение"
        android:padding="10dp"
        android:textAlignment="textStart"
        android:textColor="#579C3E"
        android:textColorHint="#579C3E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="18dp"
        android:text="Решение (округленное до целого):"
        android:textAlignment="center"
        android:textColor="#579C3E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/X1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equation" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="54dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="1dp"
        android:text="X1 ="
        android:textAlignment="center"
        android:textColor="#579C3E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/X1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/X1"
        android:layout_width="119dp"
        android:layout_height="49dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:background="#D6EFDF"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Ответ"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColorHint="#DA579C3E"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/button"
        android:layout_width="135dp"
        android:layout_height="113dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="268dp"
        android:backgroundTint="#177C3A"
        android:text="Далее"
        android:textAlignment="center"
        android:textSize="22sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/X1"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</androidx.constraintlayout.widget.ConstraintLayout>